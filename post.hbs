{{!< default}}

<link rel="stylesheet" href="{{asset "css/thread.css"}}">

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "nav"}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main id="site-main bg-primary">
    {{!-- <progress class="reading-progress-bar"></progress> --}}
    <div class="position-relative">
        <section class="section section-lg section-shaped post-landing-margin header-img">
            <div id="particles" class="particle"></div>
            <div class="header-mask bg-melon-gradient opacity-modifier"></div>
            <div class="shape shape-style-1 shape-default"></div>
        </section>
        <section class="section section-lg pt-9 section-content">
            <div class="container">
                <div class="justify-content-center mt--300 row">
                    <div class="col-lg-12">
                        <div class="bg-success-darker shadow-lg no-rad card">
                            <nav class="navbar-horizontal navbar-dark bg-success-darker navbar navbar-expand-lg">
                                <div class="container">
                                    <h3 class="text-white text-no-transform">
                                        <div class="avatar-group author-group">
                                            {{#foreach authors}}
                                                <a href="{{url}}" class="avatar avatar-m rounded-circle" data-toggle="tooltip" data-original-title="{{name}}">
                                                    {{#if profile_image}}
                                                        <img alt="{{name}}" src="{{img_url profile_image size="m"}}">
                                                    {{else}}
                                                        {{> "icons/avatar"}}
                                                    {{/if}}
                                                </a>
                                            {{/foreach}}
                                            <div class="byline-content">
                                                <span class="author-string thick-400">Authored by {{#has author="count:>2"}}multiple people{{else}}{{authors}}{{/has}}</span>
                                            </div>
                                        </div>
                                        <div class="byline-date">
                                            <span>Published on <time class="thick-600">{{date format="MMMM Do YYYY"}}</time> at <time class="thick-600">{{date format="h:mm:ss a"}}</time></span>
                                        </div>
                                    </h3>
                                </div>
                            </nav>
                        </div>
                        <div class="bg-gradient-secondary shadow card">
                            <div class="p-lg-5 card-body">
                                {{#if custom_excerpt}}
                                <div>
                                    <b class="post-excerpt-title">{{title}}</b>
                                    <div class="post-excerpt-box">
                                        <span class="post-excerpt">{{custom_excerpt}}</span>
                                        <hr>
                                    </div>
                                </div>
                                {{/if}}

                                {{#if feature_image}}
                                <figure class="post-full-image">
                                    <img
                                        srcset="{{img_url feature_image size="s"}} 300w,
                                                {{img_url feature_image size="m"}} 600w,
                                                {{img_url feature_image size="l"}} 1000w,
                                                {{img_url feature_image size="xl"}} 2000w"
                                        sizes="(max-width: 800px) 400px,
                                                (max-width: 1170px) 700px,
                                                1400px"
                                        src="{{img_url feature_image size="xl"}}"
                                        alt="{{title}}"
                                    />
                                </figure>
                                <hr>
                                {{/if}}

                                {{content}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

{{/post}}