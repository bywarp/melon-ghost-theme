<nav aria-label="Page Navigator">
    <ul class="pagination">
        <li class="page-item {{#unless prev}}disabled{{/unless}}">
            <a class="page-link" href="{{#if prev}}{{page_url prev}}{{else}}#{{/if}}" aria-label="Previous">
                <i class="fa fa-arrow-left"></i>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">{{page}}/{{pages}}</a>
        </li>
        <li class="page-item{{#unless next}} disabled{{/unless}}">
            <a class="page-link" href="{{#if next}}{{page_url next}}{{else}}#{{/if}}" aria-label="Next">
                <i class="fa fa-arrow-right"></i>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>